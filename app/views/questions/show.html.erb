<p id="notice">
	<%= notice %>
</p>

<%= render @question %>
<% @question.choices.each do |choice| %>
<div>
	<p>
		<%= choice.description + " (#{choice.votes.length} votes)"%>
	</p>
	<div class="progress progress-info progress-striped">
		<%= get_votes choice %>
	</div>
</div>
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
