<h1>Listing votes</h1>

<table border="1" bordercolor="#875545">
  <tr>
  	<th>Id</th>
    <th>Choice</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @votes.each do |vote| %>
  <tr>
  	<td><%= vote.id %></td>
    <td><%= vote.choice_id %></td>
    <td><%= vote.user_id %></td>
    <td><%= link_to 'Show', vote %></td>
    <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
    <td><%= link_to 'Destroy', vote, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

